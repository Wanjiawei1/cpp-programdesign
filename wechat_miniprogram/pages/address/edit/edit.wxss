/* pages/address/edit/edit.wxss */
.edit-container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 160rpx;
}

/* 表单区块 */
.form-section {
  background: white;
  margin-bottom: 20rpx;
}

.form-item {
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
  display: flex;
  align-items: center;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #333;
  width: 160rpx;
  flex-shrink: 0;
}

.input {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.textarea {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  min-height: 120rpx;
}

.region-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.region-text.placeholder {
  color: #999;
}

.arrow {
  font-size: 28rpx;
  color: #ccc;
  margin-left: 20rpx;
}

/* 开关项 */
.switch-item {
  justify-content: space-between;
}

/* 保存按钮 */
.save-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  border-top: 2rpx solid #f5f5f5;
}

.save-btn {
  width: 100%;
  background: #1890ff;
  color: white;
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.save-btn.disabled {
  background: #d9d9d9;
  color: #999;
}

.save-btn:active:not(.disabled) {
  opacity: 0.8;
}
