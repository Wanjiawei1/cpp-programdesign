/* pages/index/index.wxss */
.home-content {
  display: flex;
  flex-direction: column;
  position: relative;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #f5576c 75%, #4facfe 100%);
  background-size: 400% 400%;
  animation: gradientShift 15s ease infinite;
}

@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* 餐厅信息区域 */
.restaurant-info-box {
  position: relative;
  color: #1f2937;
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 32rpx 0 120rpx 0;
}

.restaurant-info {
  position: relative;
  z-index: 9;
  margin: 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  width: calc(100% - 64rpx);
  background: white;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  border-radius: 24rpx;
  padding: 40rpx;
  backdrop-filter: blur(10rpx);
}

.info-top {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.info-top-left {
  margin-right: 32rpx;
}

.logo-ruiji {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f9ff;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.2);
}

.info-top-right {
  flex: 1;
}

.right-title {
  font-size: 42rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.right-details {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.details-flex {
  display: flex;
  align-items: center;
  background: #f8fafc;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  border: 1rpx solid #e5e7eb;
}

.top-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
  opacity: 0.8;
}

.icon-text {
  font-size: 26rpx;
  color: #4b5563;
  font-weight: 500;
}

.info-bottom {
  border-top: 1rpx solid #e5e7eb;
  padding-top: 32rpx;
  margin-top: 8rpx;
}

.word {
  font-size: 30rpx;
  color: #6b7280;
  line-height: 1.6;
  background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
  padding: 24rpx;
  border-radius: 16rpx;
  border-left: 4rpx solid #3b82f6;
}

/* 菜单列表区域 */
.restaurant-menu-list {
  display: flex;
  width: 100%;
  flex: 1;
  background: white;
  position: relative;
  height: calc(100vh - 400rpx);
  min-height: 600rpx;
}

/* 分类列表 */
.type-list {
  width: 200rpx;
  background: #ffffff;
  border-right: 1rpx solid #f0f0f0;
  box-shadow: 2rpx 0 8rpx rgba(0, 0, 0, 0.04);
  position: sticky;
  top: 0;
  height: 100vh;
  overflow-y: auto;
  flex-shrink: 0;
}

.type-item {
  padding: 36rpx 24rpx;
  font-size: 30rpx;
  color: #6b7280;
  text-align: center;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
  transition: all 0.2s ease;
  font-weight: 500;
  cursor: pointer;
  user-select: none;
  -webkit-user-select: none;
  -webkit-tap-highlight-color: transparent;
}

.type-item:hover {
  background: #fafafa;
  transform: none;
}

.type-item:active {
  background: #f0f9ff;
  transform: scale(0.98);
}

.type-item.active {
  background: #f0f9ff;
  color: #3b82f6;
  font-weight: 600;
  transform: none;
  box-shadow: inset 0 0 0 2rpx rgba(59, 130, 246, 0.1);
}

.type-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  border-radius: 0 6rpx 6rpx 0;
}

/* 菜品列表 */
.vegetable-order-list {
  flex: 1;
  padding: 24rpx;
  background: #f8f9fa;
  height: 100vh;
  overflow-y: auto;
  width: 100%;
  box-sizing: border-box;
}

.dish-item {
  display: flex;
  padding: 32rpx 24rpx;
  margin: 16rpx 0;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.dish-item:hover {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transform: translateY(-2rpx);
}

.dish-img {
  width: 180rpx;
  height: 180rpx;
  margin-right: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #f8f9fa;
  flex-shrink: 0;
}

.dish-img-url {
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.dish-img:hover .dish-img-url {
  transform: scale(1.05);
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 8rpx 0;
  min-width: 0;
  overflow: hidden;
}

.dish-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
}

.dish-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
}

.dish-price {
  display: flex;
  align-items: center;
  font-size: 38rpx;
  font-weight: 700;
  color: #ef4444;
  margin-bottom: 24rpx;
  letter-spacing: 1rpx;
}

.ico {
  font-size: 28rpx;
  margin-right: 4rpx;
  font-weight: 500;
}

.dish-active {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 16rpx;
  flex-shrink: 0;
  margin-top: auto;
}

.dish-red, .dish-add {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.dish-add:active, .dish-red:active {
  transform: scale(0.95);
}

.dish-number {
  margin: 0;
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  min-width: 48rpx;
  text-align: center;
}

/* 空状态 */
.no-dish {
  padding: 120rpx 32rpx;
  text-align: center;
  color: #6b7280;
  font-size: 30rpx;
  background: white;
  margin: 16rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.seize-seat {
  height: 160rpx;
  flex-shrink: 0;
}

/* 底部购物车 */
.footer-order-bottom {
  position: fixed;
  bottom: 0;
  left: 32rpx;
  right: 32rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  z-index: 999;
  border-radius: 56rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10rpx);
}

.footer-order-bottom.order-form {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  box-shadow: 0 12rpx 24rpx rgba(239, 68, 68, 0.3);
}

.order-number {
  position: relative;
  width: 88rpx;
  height: 88rpx;
  margin-right: 24rpx;
}

.order-number-icon {
  width: 100%;
  height: 100%;
}

.order-dish-num {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ef4444;
  color: white;
  font-size: 22rpx;
  padding: 6rpx 10rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
  font-weight: 600;
}

.order-price {
  flex: 1;
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  letter-spacing: 1rpx;
}

.order-but {
  padding: 24rpx 48rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  border-radius: 48rpx;
  color: white;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 8rpx rgba(59, 130, 246, 0.3);
}

.order-but:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 4rpx rgba(59, 130, 246, 0.3);
}

/* 弹窗通用样式 */
.pop-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(8rpx);
}

/* 菜品详情弹窗 */
.dish-detail-pop {
  position: relative;
  width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.div-big-image {
  width: 100%;
  height: 400rpx;
}

.title {
  padding: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.desc {
  padding: 0 30rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.but-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b35;
}

.active {
  display: flex;
  align-items: center;
}

.close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-img {
  width: 30rpx;
  height: 30rpx;
}

/* 购物车弹窗 */
.cart-pop {
  position: fixed;
  bottom: 100rpx;
  left: 30rpx;
  right: 30rpx;
  max-height: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.top-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tit {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.clear {
  display: flex;
  align-items: center;
  color: #999;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.clear-des {
  font-size: 28rpx;
}

.card-order-list {
  max-height: 400rpx;
  padding: 0 30rpx;
}

.card-order-list .type-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-order-list .dish-img {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.card-order-list .dish-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-order-list .dish-name {
  font-size: 28rpx;
  color: #333;
}

.card-order-list .dish-price {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
}

.card-order-list .dish-active {
  display: flex;
  align-items: center;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  border-radius: 20rpx;
  padding: 60rpx;
}

.loading-ico {
  width: 80rpx;
  height: 80rpx;
}