/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  position: relative;
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 40rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.app-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
}

.login-section {
  width: 100%;
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
}

.login-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 60rpx;
  line-height: 1.5;
}

.login-btn {
  width: 100%;
  background: #1AAD19;
  color: white;
  border-radius: 50rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(26, 173, 25, 0.3);
  margin-bottom: 20rpx;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  opacity: 0.8;
  transform: translateY(2rpx);
}

.phone-btn {
  width: 100%;
  background: #FFC200;
  color: #333;
  border-radius: 50rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(255, 194, 0, 0.3);
  margin-bottom: 20rpx;
}

.phone-btn::after {
  border: none;
}

.phone-btn:active {
  opacity: 0.8;
  transform: translateY(2rpx);
}

.wechat-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.phone-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.login-tips {
  margin: 20rpx 0;
  padding: 0 20rpx;
}

.login-tips .tip-text {
  display: block;
  font-size: 24rpx;
  color: #999;
  text-align: left;
  line-height: 1.6;
  margin: 8rpx 0;
}

.login-success {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.success-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 30rpx;
}

.enter-btn {
  width: 100%;
  background: #1890ff;
  color: white;
  border-radius: 50rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 16rpx rgba(24, 144, 255, 0.3);
}

.enter-btn:active {
  opacity: 0.8;
  transform: translateY(2rpx);
}

.bottom-tips {
  position: absolute;
  bottom: 60rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
}

.tip-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.link-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-decoration: underline;
  margin: 0 8rpx;
}
