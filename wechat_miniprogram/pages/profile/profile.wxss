/* pages/profile/profile.wxss */
.profile-container {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 用户头部区域 */
.user-header {
  position: relative;
  padding: 30rpx 16rpx 20rpx;
  overflow: hidden;
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  opacity: 0.9;
}

.user-info {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  margin: 0 16rpx;
  width: calc(100% - 32rpx);
  box-sizing: border-box;
}

.avatar-container {
  position: relative;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
}

.avatar-border {
  position: absolute;
  top: -6rpx;
  left: -6rpx;
  right: -6rpx;
  bottom: -6rpx;
  border-radius: 50%;
  background: linear-gradient(45deg, #667eea, #764ba2, #f093fb);
  z-index: -1;
  animation: rotate 3s linear infinite;
}

@keyframes rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.user-details {
  flex: 1;
  min-width: 0;
}

.user-name {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  margin-right: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 200rpx;
}

.gender-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #667eea;
  color: white;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.gender-icon.female {
  background: #f093fb;
}

.user-phone {
  margin-bottom: 8rpx;
}

.phone {
  font-size: 26rpx;
  color: #6b7280;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-level {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
  border-radius: 20rpx;
}

.level-text {
  font-size: 24rpx;
  color: white;
  font-weight: 600;
}

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
  padding: 0 16rpx 20rpx;
  margin-top: -10rpx;
  overflow-y: auto;
  box-sizing: border-box;
}

/* 功能菜单区域 */
.menu-section {
  margin-bottom: 32rpx;
}

.menu-card {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 16rpx;
  transition: all 0.2s ease;
  position: relative;
  min-height: 80rpx;
  width: 100%;
  box-sizing: border-box;
}

.menu-item:active {
  background: #f8fafc;
  transform: scale(0.98);
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 24rpx;
}

.address-icon {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
}

.order-icon {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
}

.service-icon {
  background: linear-gradient(135deg, #f59e0b, #d97706);
  color: white;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
  color: #1f2937;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.menu-arrow {
  font-size: 32rpx;
  color: #9ca3af;
  font-weight: bold;
}

.menu-divider {
  height: 1rpx;
  background: #f3f4f6;
  margin: 0 24rpx;
}

/* 订单区域 */
.orders-section {
  margin-bottom: 32rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 700;
  color: white;
  margin-right: 16rpx;
}

.title-line {
  flex: 1;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.3);
}

.orders-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
}

.order-card {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
  width: 100%;
  box-sizing: border-box;
}

.order-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.12);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.order-time {
  font-size: 28rpx;
  color: #6b7280;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.order-items {
  margin-bottom: 24rpx;
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f9fafb;
}

.order-item:last-child {
  border-bottom: none;
}

.item-name {
  font-size: 28rpx;
  color: #374151;
  flex: 1;
}

.item-quantity {
  font-size: 26rpx;
  color: #9ca3af;
  margin-left: 16rpx;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-total {
  display: flex;
  align-items: center;
}

.total-text {
  font-size: 28rpx;
  color: #6b7280;
  margin-right: 8rpx;
}

.total-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.order-actions {
  margin-left: 24rpx;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  transition: all 0.2s ease;
}

.reorder-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.reorder-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #5a67d8, #6b46c1);
}

/* 操作按钮区域 */
.action-section {
  margin-top: 32rpx;
  padding: 0 0 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.action-btn {
  width: 100%;
  padding: 28rpx;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.2s ease;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.login-btn {
  background: linear-gradient(135deg, #10b981, #059669);
}

.logout-btn {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.action-btn:active {
  transform: scale(0.98);
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

/* 订单状态样式 */
.order-status.status-pending {
  background: rgba(255, 107, 53, 0.15);
  color: #ff6b35;
  border: 1rpx solid rgba(255, 107, 53, 0.3);
}

.order-status.status-waiting {
  background: rgba(255, 193, 0, 0.15);
  color: #ffc100;
  border: 1rpx solid rgba(255, 193, 0, 0.3);
}

.order-status.status-confirmed {
  background: rgba(59, 130, 246, 0.15);
  color: #3b82f6;
  border: 1rpx solid rgba(59, 130, 246, 0.3);
}

.order-status.status-delivering {
  background: rgba(16, 185, 129, 0.15);
  color: #10b981;
  border: 1rpx solid rgba(16, 185, 129, 0.3);
}

.order-status.status-completed {
  background: rgba(34, 197, 94, 0.15);
  color: #22c55e;
  border: 1rpx solid rgba(34, 197, 94, 0.3);
}

.order-status.status-cancelled {
  background: rgba(239, 68, 68, 0.15);
  color: #ef4444;
  border: 1rpx solid rgba(239, 68, 68, 0.3);
}

.order-status.status-unknown {
  background: rgba(107, 114, 128, 0.15);
  color: #6b7280;
  border: 1rpx solid rgba(107, 114, 128, 0.3);
}